<%- contentFor('body') %>


<div class="section">
  <div class="container">
    <h3 class="white-text"><%=trainer.name%></h3>
    <table>
      <thead>
        <tr>
          <th>Pokemon Name</th>
          <th>CP</th>
          <th>In Gym</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < pokemon.length; i++){ %>
          <tr>
            <td><%= pokemon[i].name %></td>
            <td><%= pokemon[i].cp%></td>
            <% if(pokemon[i].in_gym){%>
              <td>Yes</td>
            <%}else{%>
                <td>No</td>
            <%}%>

          </tr>
        <% } %>

      </tbody>
    </table>

  </div>

</div>
