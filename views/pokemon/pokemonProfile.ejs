<%- contentFor('body') %>

<script type="text/javascript">
    $(document).ready(function() {
      $('select').material_select();
    });
  </script>


<div class="section">
  <div class="container">

    <div class="row">
      <div class="col s6 m6">
        <h3 class="white-text"><%=pokemon.name%></h3>
        <p class="white-text">Trainer: <%=pokemon.trainersname%></p>
        <p class="white-text">CP: <%=pokemon.cp%></p>
        <%if(pokemon.in_gym){%>
          <p class="white-text">In Gym: Yes</p>
        <%}else{%>
          <p class="white-text">In Gym: No</p>
        <%}%>

      </div>
      <div class="col s6 m6">

        <img class="pokemonPic" src="<%=pokemon.pic_url%>">

      </div>

    </div>



  </div>

</div>
