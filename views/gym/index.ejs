<%- contentFor('body') %>

<script type="text/javascript">
    $(document).ready(function() {
      $('select').material_select();
    });
  </script>

<span style="color:white">The Gym</span>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col s6 m6">
        <h3 class="white-text">Player One</h3>
        <%if(playerone != 'no'){%>
          <p class="white-text">Name: <%=playerone.name%></p>
          <p class="white-text">CP: <%=playerone.cp%></p>
        <%}else{%>
          <form action="/addToGym/one" method="post">
              <select class="white-text" name="id">
                <%for(let i = 0; i < pokemon.length; i++){%>
                  <option value="<%=pokemon[i].id%>"><%=pokemon[i].name%></option>
                <%}%>
              </select>
      <br>
      <br>
          <input value="Add Pokemon" type="submit">
          </form>

        <%}%>
      </div>
      <div class="col s6 m6">
        <h3 class="white-text">Player Two</h3>
        <%if(playertwo != 'no'){%>
          <p class="white-text">Name: <%=playertwo.name%></p>
          <p class="white-text">CP: <%=playertwo.cp%></p>
      <%}else{%>
        <form action="/addToGym/two" method="post">
            <select class="white-text" name="id">
              <%for(let i = 0; i < pokemon.length; i++){%>
                <option value="<%=pokemon[i].id%>"><%=pokemon[i].name%></option>
              <%}%>
            </select>
    <br>
    <br>
        <input type="submit" value="Add Pokemon">
        </form>
      <%}%>
      </div>
    </div>
    <div class="row">
      <%if(battle === 'yes'){%>
        <a href="/Battle">Battle</a>
      <%}%>
    </div>
  </div>
</div>
